package aula05.ex_3;

public class circulo {

    private float raio;

    public Circulo(int r){
        if(r > 0)
            this.raio = r;
    }

    public float getRaio(){ return this.raio; }
    public void setRaio(int r){ if(r > 0) this.raio = r;}

    @Override
    public String toString() {
        return "" + this.raio + "";
    }

    @Override
    public boolean equals(Circulo c){
        return (this.getRaio == c.raio);
    }

    @Override
    public int compareTo(Circulo c){
        if(this.getRaio < c.raio) return -1;
        return (this.getRaio == c.raio) ? 0 : 1;
    }


}
